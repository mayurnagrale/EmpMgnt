@model Employee

<!DOCTYPE html>
<html>
<head>
    <title>Add Employee</title>
</head>
<body>
    <div class="text-center">
    <h1 class="display-4">Employee Form</h1>
    </div>
    <div>
        .
        .
    </div>
    <form method="post" class="text-center" action="@Url.Action("AddEmployee")">
        <div class="mb-3">
             <label for="Name">Name:</label>
             <input type="text" name="Name" value="" required /><br />
        </div>
       
        <div class="mb-3">
             <label for="Address">Address:</label>
             <input type="text" name="Address" value="" required /><br />
        </div>
        
        <div class="mb-3">
             <label for="Mobile">Mobile:</label>
             <input type="text" name="Mobile" value="" required /><br />
        </div>
        
        <div class="mb-3">
             <label for="DOB">Date of Birth:</label>
             <input type="date" name="DOB" value="" required /><br />
        </div>
        

        <input type="submit" value="Add Employee" />
    </form>
</body>
</html>