@model Employee

<!DOCTYPE html>
<html>
<head>
    <title>Modify Employee</title>
</head>
<body>
    <div class="text-center">
    <h1 class="display-4">Employee Form</h1>
    </div>

    <h1>Modify Employee</h1>
    <form method="post" action="@Url.Action("ModifyEmployeeData")">
        <div class="mb-3">
            <label for="Id">Id:</label>
            <input type="text" name="Id" value="@Model.Id" required /><br />
        </div>
        <div class="mb-3">
             <label for="Name">Name:</label>
             <input type="text" name="Name" value="@Model.Name" required /><br />
        </div>
       
        <div class="mb-3">
             <label for="Address">Address:</label>
             <input type="text" name="Address" value="@Model.Address" required /><br />
        </div>
        
        <div class="mb-3">
             <label for="Mobile">Mobile:</label>
             <input type="text" name="Mobile" value="@Model.Mobile" required /><br />
        </div>
        
        <div class="mb-3">
             <label for="DOB">Date of Birth:</label>
             <input type="datetime" name="DOB" value="@Model.DOB.Date" required /><br />
        </div>
        

        <input type="submit" value="Modify Employee" />
    </form>
</body>
</html>